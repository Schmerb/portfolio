<section id="contact" class="contact-section">
    <div class="contact-header target">
        <h2>Get in TOUCH</h2>
        <a class="my-email" href="mailto:mikeschmerbeck@gmail.com">mikeschmerbeck@gmail.com</a>
        <button class="copy-btn" type="button">
            <svg class="icon icon-clipboard-icon"><use xlink:href="#icon-clipboard-icon"></use></svg>
        </button>
        <p class="copy-success-msg">Copied to Clipboard</p>
    </div> 

    <form class="contact-form target" action="https://formspree.io/mikeschmerbeck@gmail.com" method="POST">
        <label>
            <input type="text" name="name">
            <span class="name">Your Name</span>
        </label>

        <label>
            <input type="email" name="email">
            <span class="email">Email</span>
        </label>

        <label>
            <textarea resize="none" name="message"></textarea>
            <span class="message">Write your message</span>
        </label>

        <p class="error hidden">There was an error sending your email. Please try again.</p>

        <button class="submit-btn" type="submit"><span>Send</span></button>
    </form>
</section>