<section id="contact" class="contact-section">
    <h2>Get in TOUCH</h2>

    <form class="contact-form" action="#!" method="POST">
        <label>
            <input type="text" name="" value="">
            <span class="name">Your Name</span>
        </label>

        <label>
            <input type="email" name="" value="">
            <span class="email">Email</span>
        </label>

        <label>
            <textarea resize="none"></textarea>
            <span class="message">Write your message</span>
        </label>

        <p class="error hidden">There was an error sending your email. Please try again.</p>

        <button class="submit-btn" type="submit"><span>Send</span></button>
    </form>
</section>